<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workout_list_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e4e400"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/workout_list_element_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Workout Name"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="#565656"
        />
 <ImageView
     android:id="@+id/workout_list_element_image"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_weight="0.5"
     android:layout_gravity="center"
     android:src="@drawable/ic_baseline_filter_alt_24"
     android:background="#252525"/>

    <TextView
        android:id="@+id/workout_list_element_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout Description"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="#565656"
        />


</LinearLayout>